<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!--
        Key entitlements (as documented in docs/distribution-guide.md):
        1. Hardened Runtime enabled (required for notarization)
        2. com.apple.security.automation.apple-events (Accessibility)
    -->

    <!-- Hardened Runtime (required for notarization) -->
    <!-- All opt-out flags are set to false to enable full hardened runtime protection -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <false/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <false/>
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>

    <!-- Accessibility Permission (REQUIRED for text extraction/insertion) -->
    <!-- com.apple.security.automation.apple-events (Accessibility) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Network (not required for current implementation, but useful for future features) -->
    <key>com.apple.security.network.client</key>
    <false/>
    <key>com.apple.security.network.server</key>
    <false/>

    <!-- User Selected Files (not required, included for completeness) -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <false/>
    <key>com.apple.security.files.user-selected.read-write</key>
    <false/>
</dict>
</plist>
